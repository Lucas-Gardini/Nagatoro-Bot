{
	"name": "nagatoro-discord-bot",
	"version": "1.0.0",
	"description": "A simple bot made for fun with discord.js",
	"main": "./src/index.ts",
	"scripts": {
		"setup-npm": "npm i -G ts-node && npm i",
		"setup-yarn": "npm i -G ts-node && yarn",
		"dev": "nodemon",
		"build": "webpack",
		"build-dev": "webpack --mode=development",
		"check-updates": "ncu",
		"update": "ncu -u && npm i",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"author": "Lucas-Gardini",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^15.12.4",
		"@typescript-eslint/eslint-plugin": "^4.28.0",
		"@typescript-eslint/parser": "^4.28.0",
		"babel-eslint": "^10.1.0",
		"chalk": "^2.4.2",
		"eslint": "^7.29.0",
		"eslint-config-airbnb": "^18.2.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.23.4",
		"eslint-plugin-prettier": "^3.4.0",
		"nodemon": "^2.0.7",
		"npm-check-updates": "^11.7.1",
		"prettier": "^2.3.2",
		"progress-bar-webpack-plugin": "^2.1.0",
		"ts-loader": "^9.2.3",
		"ts-node": "^10.0.0",
		"tsconfig-paths": "^3.9.0",
		"typescript": "^4.3.4",
		"webpack": "^5.40.0",
		"webpack-cli": "^4.7.2"
	},
	"nodemonConfig": {
		"ignore": [
			"**/*.test.ts",
			"**/*.spec.ts",
			".git",
			"node_modules"
		],
		"watch": [
			"."
		],
		"exec": "ts-node -r tsconfig-paths/register ./src/index.ts -T",
		"ext": "ts"
	},
	"dependencies": {
		"@discordjs/opus": "^0.5.3",
		"discord.js": "^12.5.3",
		"ora": "^5.4.1"
	}
}
